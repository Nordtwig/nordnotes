                <input type="url" id="book-url" name="book_url" placeholder="Book URL" value="<%= book?.book_url %>"><br>
                <input type="number" id="publication-year" name="publication_year" placeholder="Publication Year (YYYY)" value="<%= book?.publication_year %>"><br>
